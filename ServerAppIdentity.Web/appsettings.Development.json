{
  "clients": [
    // Configuration for angular client running with angular-cli environment
    {
      "clientId": "angularclient",
      "clientName": "angularclient",
      "allowedGrantTypes": ["implicit"],
      "allowAccessTokensViaBrowser": true,
      "redirectUris": ["http://localhost:4200"],
      "postLogoutRedirectUris": ["http://localhost:4200/Unauthorized"],
      "allowedCorsOrigins": ["http://localhost:4200"],
      "allowedScopes": ["openid", "profile", "api1"]
    },
    // Configuration for angular client running with IIS Express embedded in API host
    {
      "clientId": "angularclient-dev-embedded",
      "clientName": "angularclient-dev-embedded",
      "allowedGrantTypes": ["implicit"],
      "allowAccessTokensViaBrowser": true,
      "redirectUris": ["http://localhost:5200/angular"],
      "postLogoutRedirectUris": ["http://localhost:5200/angular/Unauthorized"],
      "allowedCorsOrigins": ["http://localhost:5200"],
      "allowedScopes": ["openid", "profile", "api1"]
    },
    {
      "clientId": "reactclient",
      "clientName": "reactclient",
      "allowedGrantTypes": ["implicit"],
      "allowAccessTokensViaBrowser": true,
      "redirectUris": ["http://localhost:3000"],
      "postLogoutRedirectUris": ["http://localhost:3000/Unauthorized"],
      "allowedCorsOrigins": ["http://localhost:3000"],
      "allowedScopes": ["openid", "profile", "api1"]
    },
    {
      "clientId": "reactclient-dev-embedded",
      "clientName": "reactclient-dev-embedded",
      "allowedGrantTypes": ["implicit"],
      "allowAccessTokensViaBrowser": true,
      "redirectUris": ["http://localhost:5200/react"],
      "postLogoutRedirectUris": ["http://localhost:5200/react/Unauthorized"],
      "allowedCorsOrigins": ["http://localhost:5200"],
      "allowedScopes": ["openid", "profile", "api1"]
    }
  ]
